package queues;

public class QueueUsingArray {
	private int data[];
	private int front;
	private int rear;
	private int size;
	
	public QueueUsingArray() {
		data = new int[5];
		front=-1;
		rear=-1;
	}
	public QueueUsingArray(int capacity) {
		data = new int[capacity];
		front=-1;
		rear=-1;
	}
	
	public boolean isEmpty() {
		return size==0;
	}
	
	public void enqueue(int elem) {
		if(rear==data.length-1) {
			return;
		}
		if(front==-1 && rear==-1) {
			front++;
		}
		data[++rear] = elem;
		
	}
	public int front() {
		if(front==-1) {
			return -1;
		}
		return data[front];
		
	}
	public int dequeue() {
		if(front==-1) {
			return -1;
		}
		return data[front++];
	}
	
	
}
